{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "@fed-ai/sdk-js": ["../../packages/sdk-js/dist"],
      "@fed-ai/protocol": ["../../packages/protocol/dist"],
      "@fed-ai/nostr-relay-discovery": ["../../packages/nostr-relay-discovery/dist"]
    },
    "skipLibCheck": true,
    "target": "ES2020",
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["app.js", "server.js", "scripts/**/*.js"]
}
